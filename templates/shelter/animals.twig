            controlsContainer.hide();
            spinner.show();

            try{
                postData("/overitUzivatele",{"uzivatel_id":id}).then((result)=>{
                    if(result.status == "success"){
                        const today = new Date();
                        const yyyy = today.getFullYear();
                        let mm = today.getMonth() + 1;
                        let dd = today.getDate();

                        if (dd < 10) dd = '0' + dd;
                        if (mm < 10) mm = '0' + mm;

                        const formattedToday = dd + '. ' + mm + '. ' + yyyy;

                        statusText.text(formattedToday);
                        statusText.removeClass("text-red-400");
                        statusText.addClass("text-green-400");
                        $(el).remove();
                        controlsContainer.show();
                        spinner.hide();
                    }else{
                        controlsContainer.show();
                        spinner.hide();
                    }
                }).done();
            }catch{
                controlsContainer.show();
                spinner.hide();
            }
        }
