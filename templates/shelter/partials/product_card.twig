<div class="{{ is_showcase ? 'product-showcase-card' : 'product-card' }}">
    <a href="/produkt/{{product.link}}">
        <img class="product-card-image" srcset src="{{product.image_url_large}}" alt="">
    </a>
    <a href="/produkt/{{product.link}}" class="product-card-name">{{product.name}}</a>
    <p class="product-card-description">{{product.description_small}}</p>
    {% if product.quantity > 0 %}
    <p class="product-card-stock">Výroba do 24 hodin</p>
    <div class="flex flex-row items-end">
        {% if product.sale_percentage > 0 %}
            <div class="product-card-sale-panel">
                <p class="product-card-sale">SLEVA {{product.sale_percentage}} %</p>
                <p class="product-card-price">{{(product.sell_price * ((100 - product.sale_percentage) / 100))|number_format(0,"."," ")}},-</p>
                <p class="product-card-sale-old-price">{{ product.sell_price }},-</p>
            </div>
        {% else %}
            <p class="product-card-price">{{product.sell_price}},-</p>
        {% endif %}
        <a href="/produkt/{{product.link}}" class="product-card-add-to-cart gap-2" >
            <div role="status" class="spinner hidden">
